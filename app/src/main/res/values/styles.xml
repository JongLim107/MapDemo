<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <!-- PopupWindow窗口动画 -->

    <style name="MenuAnimationFade">
        <item name="android:windowEnterAnimation">@anim/menu_fadein</item>
        <item name="android:windowExitAnimation">@anim/menu_fadeout</item>
    </style>

    <style name="edittext_left">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/edittext_margin_left_icon</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:freezesText">true</item>
        <item name="android:textColorHint">@color/text_grey_light</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/grey_deep_alpha</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="textview_marquee">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <style name="xm_category_scroll_view_item_text">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tvStyle4DialogBtn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/item_padding</item>
        <item name="android:paddingTop">@dimen/item_padding</item>
        <item name="android:paddingLeft">@dimen/view_padding</item>
        <item name="android:paddingRight">@dimen/view_padding</item>
        <item name="android:textColor">@color/text_black_selector_trans</item>
        <item name="android:textSize">@dimen/font_size_middle</item>
    </style>

    <!-- none background dialog -->
    <style name="noBgDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <declare-styleable name="LabelTextView">
        <attr name="label_text" format="string" />
        <attr name="label_color" format="reference" />
        <attr name="label_size" format="dimension" />
        <attr name="label_text_style">
            <flag name="test" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="value_text" format="string" />
        <attr name="value_color" format="reference" />
        <attr name="value_size" format="dimension" />
        <attr name="value_background" format="reference" />
        <attr name="value_text_style">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="label_icon" format="reference" />
        <attr name="right_icon" format="reference" />
        <attr name="icon_tint" format="reference" />
        <attr name="right_icon_tint" format="reference" />
        <attr name="redirect_arrow" format="boolean" />
        <attr name="redirect_line" format="boolean" />
        <attr name="content_padding" format="dimension" />
        <attr name="content_padding_b" format="dimension" />
        <attr name="content_padding_l" format="dimension" />
        <attr name="content_padding_r" format="dimension" />
        <attr name="content_padding_t" format="dimension" />
        <attr name="content_horizontal" format="boolean" />
        <attr name="content_gravity" format="integer">
            <flag name="ltvHorizontalCenter" value="1"/>
            <flag name="ltvVerticalCenter" value="16"/>
            <flag name="ltvCenter" value="17"/>
        </attr>

        <!-- show more lines -->
        <attr name="value_more_lines" format="boolean" />

    </declare-styleable>

    <declare-styleable name="TriangleView">
        <attr name="line_color" format="color" />
        <attr name="solid_color" format="color" />
    </declare-styleable>


    <style name="tvBlueMiddle">
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:textSize">@dimen/font_size_middle</item>
    </style>

    <style name="tvBlackMiddle">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/font_size_middle</item>
    </style>

    <style name="tvBlueNormal">
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>

    <style name="tvBlueSmall">
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="tvBlackNormal">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>

    <style name="tvBlackSmall">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="tvHintGrey">
        <item name="android:textColor">@color/text_hint_gray</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>

    <style name="ltvHintBlackNormal">
        <item name="android:textColor">@color/text_hint_black</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>

    <style name="itemHintText">
        <item name="android:textColor">@color/text_hint_black</item>
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>


    <style name="ltvHintBlackSmall">
        <item name="android:textColor">@color/text_hint_black</item>
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

</resources>

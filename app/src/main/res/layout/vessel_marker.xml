<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants">

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:paddingBottom="@dimen/item_padding_min"
        android:background="@drawable/frame_white_corner"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.brightoil.mapdemo.widgets.LabelTextView
                android:id="@+id/ltvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/item_padding_small"
                android:layout_marginRight="@dimen/item_padding_small"
                app:content_horizontal="true"
                app:content_padding="@dimen/item_padding_small"
                app:label_text="NAME: "
                app:label_size="@dimen/font_size_normal"
                app:redirect_line="false"
                app:value_size="@dimen/font_size_normal"
                tools:value_text="Singapore Ship"/>
            <ImageView
                android:id="@+id/imgClose"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="@dimen/item_padding_small"
                android:src="@drawable/ic_clear"
                android:tint="@color/grey"/>
        </LinearLayout>

        <com.brightoil.mapdemo.widgets.LabelTextView
            android:id="@+id/ltvLongitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_padding_small"
            android:layout_marginRight="@dimen/item_padding_small"
            app:content_horizontal="true"
            app:content_padding_b="@dimen/item_padding_small"
            app:content_padding_l="@dimen/item_padding_small"
            app:content_padding_r="@dimen/item_padding_small"
            app:label_text="Longitude: "
            app:label_size="@dimen/font_size_normal"
            app:redirect_line="false"
            app:value_size="@dimen/font_size_normal"
            tools:value_text="123.12'321"/>

        <com.brightoil.mapdemo.widgets.LabelTextView
            android:id="@+id/ltvLatitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_padding_small"
            android:layout_marginRight="@dimen/item_padding_small"
            app:content_horizontal="true"
            app:content_padding_b="@dimen/item_padding_small"
            app:content_padding_l="@dimen/item_padding_small"
            app:content_padding_r="@dimen/item_padding_small"
            app:label_text="Latitude: "
            app:label_size="@dimen/font_size_normal"
            app:redirect_line="false"
            app:value_size="@dimen/font_size_normal"
            tools:value_text="23.45'321"/>

        <com.brightoil.mapdemo.widgets.LabelTextView
            android:id="@+id/ltvMmsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_padding_small"
            android:layout_marginRight="@dimen/item_padding_small"
            app:content_horizontal="true"
            app:content_padding_b="@dimen/item_padding_small"
            app:content_padding_l="@dimen/item_padding_small"
            app:content_padding_r="@dimen/item_padding_small"
            app:label_text="MMSI: "
            app:label_size="@dimen/font_size_normal"
            app:redirect_line="false"
            app:value_size="@dimen/font_size_normal"
            app:value_text="Singapore"/>
    </LinearLayout>

    <com.brightoil.mapdemo.widgets.InvertedTriangleView
        android:id="@+id/arrow"
        android:layout_width="28dp"
        android:layout_height="26dp"
        android:layout_gravity="bottom|center_horizontal"
        app:line_color="@color/blue_light"
        app:solid_color="@color/white"/>
</FrameLayout>
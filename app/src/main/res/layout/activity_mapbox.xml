<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Switch
        android:id="@+id/swTug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/swCargo"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/view_padding"
        android:layout_marginRight="@dimen/item_padding"
        android:gravity="center"
        android:text="GeoJson"/>

    <Switch
        android:id="@+id/swCargo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/swTanker"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/view_padding"
        android:layout_marginRight="@dimen/item_padding"
        android:gravity="center"
        android:text="CARGO"/>

    <Switch
        android:id="@+id/swTanker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/swShip"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/view_padding"
        android:layout_marginRight="@dimen/item_padding"
        android:gravity="center"
        android:text="TANKER"/>

    <Switch
        android:id="@+id/swShip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/view_padding"
        android:layout_marginRight="@dimen/item_padding"
        android:gravity="center"
        android:text="SHIP"/>


</RelativeLayout>
